# ======================================
# Coconut Saraih Hotel - Environment Variables
# ======================================

# ======================================
# Server Configuration
# ======================================
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:8080
API_URL=http://localhost:3000

# ======================================
# Database Configuration
# ======================================
MONGODB_URI=mongodb://localhost:27017/coconut-saraih
MONGODB_USER=admin
MONGODB_PASSWORD=your_password_here

# ======================================
# Redis Configuration
# ======================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ======================================
# JWT Configuration
# ======================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRE=7d
JWT_REFRESH_EXPIRE=30d

# ======================================
# Security
# ======================================
ENCRYPTION_KEY=your-32-character-encryption-key
SESSION_SECRET=your-session-secret-key
CORS_ORIGINS=http://localhost:8080,http://localhost:3000

# ======================================
# Email Configuration (SMTP)
# ======================================
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM="Coconut Saraih Hotel" <noreply@coconutsaraih.com>

# ======================================
# SendGrid (Alternative)
# ======================================
SENDGRID_API_KEY=

# ======================================
# SMS Configuration
# ======================================
# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Africa Talking
AFRICA_TALKING_USERNAME=
AFRICA_TALKING_API_KEY=
AFRICA_TALKING_SHORT_CODE=

# ======================================
# Payment Gateways
# ======================================
# Stripe
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# M-Pesa
MPESA_CONSUMER_KEY=
MPESA_CONSUMER_SECRET=
MPESA_SHORT_CODE=
MPESA_PASSKEY=
MPESA_CALLBACK_URL=
MPESA_ENVIRONMENT=sandbox

# ======================================
# Cloud Storage
# ======================================
# Cloudinary
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# AWS S3
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=coconut-saraih-uploads

# CloudFront
CLOUDFRONT_DOMAIN=

# ======================================
# Monitoring & Logging
# ======================================
LOG_LEVEL=info
LOG_DIR=./logs

# Sentry
SENTRY_DSN=

# New Relic
NEW_RELIC_LICENSE_KEY=

# ======================================
# Feature Flags
# ======================================
ENABLE_PAYMENT=true
ENABLE_SMS=true
ENABLE_PUSH=false
ENABLE_SOCKET=true
ENABLE_ANALYTICS=true
ENABLE_CACHE=true
ENABLE_MPESA=false
ENABLE_PAYPAL=false

# ======================================
# Third-Party Services
# ======================================
# Google Analytics
GA_TRACKING_ID=

# Firebase (for push notifications)
FIREBASE_PROJECT_ID=
FIREBASE_PRIVATE_KEY=
FIREBASE_CLIENT_EMAIL=

# ======================================
# Cron Jobs
# ======================================
ENABLE_CRON_JOBS=true

# ======================================
# Development Only
# ======================================
# Seed database on startup
SEED_DATABASE=false
